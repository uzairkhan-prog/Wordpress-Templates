        "radius": "0px",
        "font": {
          "size": "14px",
          "weight": "500",
          "family": ""
        },
        "letterCase": "none",
        "color": {
          "text": "",
          "textHover": "",
          "bg": "",
          "bgHover": "",
          "borderHover": ""
        }
      }
    },
    "postMeta": {
      "type": "object",
      "default": {
        "margin": {
          "top": "0px",
          "bottom": "4px"
        },
        "font": {
          "size": "12px",
          "weight": "500",
          "family": ""
        },
        "letterCase": "none",
        "color": {
