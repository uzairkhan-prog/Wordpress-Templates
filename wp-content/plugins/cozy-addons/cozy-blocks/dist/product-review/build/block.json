{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "cozy-block/product-review",
  "title": "All Product Reviews",
  "description": "Revolutionize your product displays with our 'All Product Reviews' block. Showcase customer feedback in style with multiple layout options, including list, grid, and carousel. Increase trust and engagement by strategically placing authentic reviews anywhere on your WordPress site for maximum impact.",
  "category": "cozy-block/woocommerce",
  "keywords": [
    "product",
    "review"
  ],
  "supports": {
    "html": false
  },
  "attributes": {
    "cover": {
      "type": "string",
      "default": ""
    },
    "blockClientId": {
      "type": "string",
      "default": ""
    },
    "layout": {
      "type": "string",
      "default": "grid"
    },
    "perPage": {
      "type": "string",
      "default": "-1"
    },
    "ratingFilter": {
      "type": "string",
      "default": "1"
    },
    "hoverShow": {
      "type": "boolean",
      "default": true
    },
    "enableOptions": {
      "type": "object",
      "default": {
        "productName": true,
        "productRating": true,
        "reviewerName": true,
        "image": true,
        "reviewDate": true,
        "reviewContent": true
      }
    },
    "imageType": {
      "type": "string",
      "default": "product"
    },
    "headingOptions": {
      "type": "object",
      "default": {
        "enabled": true,
        "blockAlign": "space-between",
        "gap": 15,
        "verticalGap": 10,
        "label": "Store Reviews",
        "fontFamily": "sans-serif",
        "fontSize": "",
        "color": "#000",
        "iconColor": "#D48D3B",
        "iconBgColor": "#FBF3EA",
        "fontWeight": 400
      }
    },
    "gridOptions": {
      "type": "object",
      "default": {
        "blockAlign": "left",
        "displayColumn": 3,
        "columnGap": 30
      }
    },
    "listOptions": {
      "type": "object",
      "default": {
        "textAlign": "left",
        "rowGap": 10
      }
    },
    "ajaxButton": {
      "type": "object",
      "default": {
        "enabled": true,
        "label": "Load More",
        "contentLoad": 10,
        "marginTop": 0,
        "padding": {
          "top": 10,
          "right": 10,
          "bottom": 10,
          "left": 10
        },
        "border": {
          "width": 1,
          "type": "none",
          "color": "#000",
          "colorHover": ""
        },
        "borderRadius": 10,
        "fontSize": 14,
        "fontWeight": 400,
        "fontFamily": "sans-serif",
        "bgColor": "#5566ca",
        "bgColorHover": "",
        "color": "#fff",
        "colorHover": ""
      }
    },
    "carouselOptions": {
      "type": "object",
      "default": {
        "textAlign": "center",
        "flexDirection": "column",
        "gap": 0
      }
    },
    "pagination": {
      "type": "object",
      "default": {
        "enabled": true,
        "width": 10,
        "height": 10,
        "borderRadius": 10,
        "activeWidth": 10,
        "activeBorderRadius": 10,
        "activeColor": "#007cba",
        "color": "#252525",
        "activeColorHover": "#164861",
        "colorHover": "#a5a5a5",
        "align": "center",
        "verticalPosition": 0,
        "left": "0px",
        "right": "0px"
      }
    },
    "navigation": {
      "type": "object",
      "default": {
        "enabled": true,
        "iconSize": 15,
        "iconBoxWidth": 35,
        "iconBoxHeight": 35,
        "borderRadius": 50,
        "verticalPosition": 65,
        "backgroundColor": "#fff",
        "color": "#007cba",
        "backgroundColorHover": "#007cba",
        "colorHover": "#fff"
      }
    },
    "sliderOptions": {
      "type": "object",
      "default": {
        "loop": false,
        "autoplay": {
          "status": true,
          "pauseOnMouseEnter": true,
          "delay": 2500
        },
        "centeredSlides": false,
        "slidesPerView": 3,
        "spaceBetween": 30,
        "speed": 700
      }
    },
    "containerStyles": {
      "type": "object",
      "default": {
        "padding": {
          "top": 24,
          "right": 24,
          "bottom": 24,
          "left": 24
        },
        "border": {
          "width": {
            "top": 1,
            "right": 1,
            "bottom": 1,
            "left": 1
          },
          "type": "none",
          "color": "#000",
          "colorHover": ""
        },
        "borderRadius": {
          "top": 0,
          "right": 0,
          "bottom": 0,
          "left": 0
        },
        "boxShadow": {
          "enabled": false,
          "color": "#000",
          "colorHover": "",
          "horizontal": 0,
          "vertical": 0,
          "blur": 10,
          "blurHover": "",
          "spread": 0,
          "spreadHover": "",
          "position": ""
        },
        "bgColor": "",
        "bgColorHover": ""
      }
    },
    "reviewImage": {
      "type": "object",
      "default": {
        "hoverEffect": true,
        "width": 48,
        "height": "",
        "borderRadius": 100
      }
    },
    "reviewTitle": {
      "type": "object",
      "default": {
        "marginLeft": 20,
        "dateFormat": "m-d-y",
        "dateAbbr": true,
        "titleColor": "#5566ca",
        "titleColorHover": "",
        "ratingSize": 16,
        "ratingColor": "#fcb900",
        "textColor": "#000",
        "titleTypography": {
          "fontFamily": "sans-serif",
          "fontSize": 16,
          "fontWeight": 400
        }
      }
    },
    "reviewContent": {
      "type": "object",
      "default": {
        "margin": {
          "top": 0,
          "right": 0,
          "bottom": 0,
          "left": 78
        },
        "excerpt": 50,
        "position": "bottom",
        "borderRadius": 10
      }
    },
    "typography": {
      "type": "object",
      "default": {
        "fontFamily": "sans-serif",
        "fontSize": 14,
        "color": "#000",
        "fontWeight": 400
      }
    }
  },
  "editorScript": [
    "cozy-block--product-review"
  ],
  "editorStyle": [
    "cozy-block--product-review--editor-style"
  ],
  "viewScript": [
    "cozy-block-scripts"
  ],
  "script": [
    "cozy-swiper-bundle"
  ],
  "style": [
    "cozy-block--product-review--style",
    "cozy-swiper-bundle"
  ],
  "render": "file:./render.php"
}