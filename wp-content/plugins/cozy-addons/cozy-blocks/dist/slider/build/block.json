  "editorScript": [
    "cozy-block--slider"
  ],
  "editorStyle": "cozy-block--slider--editor-style",
  "viewScript": [
    "cozy-block-scripts"
  ],
  "script": [
    "cozy-swiper-bundle"
  ],
  "style": [
    "cozy-block--slider--style",
    "cozy-swiper-bundle"
  ],
  "render": "file:./render.php"
